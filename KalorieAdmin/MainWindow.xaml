<Window x:Class="KalorieAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kalorie Tracker Admin" Height="700" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#eafaf1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <!-- Header -->
        <Border Background="#2ecc71" Height="70" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <TextBlock Text="Администрирование трекера калорий" 
                      Foreground="White" FontSize="24" FontWeight="Bold"
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Navigation Menu -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled"
                     Margin="10,80,10,0" Height="50" VerticalAlignment="Top" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <Button Click="OpenUsers" Background="#27ae60" Foreground="White" 
                        Content="👥 Пользователи" Height="35" Margin="5" Width="130"
                        FontWeight="Bold" BorderThickness="0" FontSize="12"/>
                <Button Click="OpenProducts" Background="#27ae60" Foreground="White" 
                        Content="🍎 Продукты" Height="35" Margin="5" Width="130"
                        FontWeight="Bold" BorderThickness="0" FontSize="12"/>
                <Button Click="OpenMeals" Background="#27ae60" Foreground="White" 
                        Content="🍽️ Приемы пищи" Height="35" Margin="5" Width="130"
                        FontWeight="Bold" BorderThickness="0" FontSize="12"/>
                <Button Click="OpenGoals" Background="#27ae60" Foreground="White" 
                        Content="🎯 Цели" Height="35" Margin="5" Width="130"
                        FontWeight="Bold" BorderThickness="0" FontSize="12"/>
                <Button Click="OpenAchievements" Background="#27ae60" Foreground="White" 
                        Content="🏆 Достижения" Height="35" Margin="5" Width="130"
                        FontWeight="Bold" BorderThickness="0" FontSize="12"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Content Frame -->
        <Frame x:Name="Frame" NavigationUIVisibility="Hidden" Margin="10,140,10,10" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
