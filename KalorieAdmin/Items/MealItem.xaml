<UserControl x:Class="KalorieAdmin.Items.MealItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Border BorderBrush="#2ecc71" BorderThickness="1" Margin="5" CornerRadius="5">
        <Grid Background="#eafaf1" Margin="0,0,0,-52">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="15">
                <TextBlock Foreground="Black" Text="Пользователь:" FontWeight="Bold"/>
                <TextBox x:Name="UserName" Height="25" IsEnabled="False" Text="{Binding UserName}" 
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>

                <TextBlock Foreground="Black" Text="Продукт:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="ProductName" Height="25" IsEnabled="False" Text="{Binding ProductName}"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="15">
                <TextBlock Foreground="Black" Text="Вес (г):" FontWeight="Bold"/>
                <TextBox x:Name="WeightGrams" Height="25" IsEnabled="False" 
                         Text="{Binding WeightGrams, StringFormat={}{0:F2}}"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>

                <TextBlock Foreground="Black" Text="Время приема:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="ConsumedAt" Height="25" IsEnabled="False" 
                         Text="{Binding ConsumedAt, StringFormat='dd.MM.yyyy HH:mm'}"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="15" VerticalAlignment="Center">
                <Button Content="Изменить" Width="80" Height="30" Margin="0,5" 
                        Background="#2ecc71" Foreground="White" BorderThickness="0"
                        FontWeight="Bold" Click="EditMeal"/>
                <Button Content="Удалить" Width="80" Height="30" Margin="0,5" 
                        Background="#e74c3c" Foreground="White" BorderThickness="0"
                        FontWeight="Bold" Click="DeleteMeal"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
