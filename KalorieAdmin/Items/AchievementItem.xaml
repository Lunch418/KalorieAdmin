<UserControl x:Class="KalorieAdmin.Items.AchievementItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="800" Height="166">
    <Border BorderBrush="#2ecc71" BorderThickness="1" Margin="5" CornerRadius="5">
        <Grid Background="#eafaf1" Height="156" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="15">
                <TextBlock Foreground="Black" Text="Пользователь:" FontWeight="Bold"/>
                <TextBox x:Name="UserName" Height="25" IsEnabled="False" Text="{Binding UserName}" 
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>
                <TextBlock Foreground="Black" Text="Название:" FontWeight="Bold"/>
                <TextBox x:Name="AchievementName" Height="25" IsEnabled="False" Text="{Binding Name}"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="15">
                <TextBlock Foreground="Black" Text="Описание:" FontWeight="Bold"/>
                <TextBox x:Name="Description" Height="27" IsEnabled="False" Text="{Binding Description}" 
                         TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>

                <TextBlock Foreground="Black" Text="Получено:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="EarnedAt" Height="25" IsEnabled="False" 
                         Text="{Binding EarnedAt, StringFormat='dd.MM.yyyy HH:mm'}"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="15" VerticalAlignment="Center">
                <Button Content="Изменить" Width="80" Height="30" Margin="0,5" 
                        Background="#2ecc71" Foreground="White" BorderThickness="0"
                        FontWeight="Bold" Click="EditAchievement"/>
                <Button Content="Удалить" Width="80" Height="30" Margin="0,5" 
                        Background="#e74c3c" Foreground="White" BorderThickness="0"
                        FontWeight="Bold" Click="DeleteAchievement"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
