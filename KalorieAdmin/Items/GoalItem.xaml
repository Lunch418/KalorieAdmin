<UserControl x:Class="KalorieAdmin.Items.GoalItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="800">
    <Border BorderBrush="#2ecc71" BorderThickness="1" Margin="5" CornerRadius="5">
        <Grid Background="#eafaf1" Margin="0,0,0,-34">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="15">
                <TextBlock Foreground="Black" Text="Пользователь:" FontWeight="Bold"/>
                <TextBox x:Name="UserName" Height="25" IsEnabled="False" Text="{Binding UserName}" 
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>

                <TextBlock Foreground="Black" Text="Тип цели:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="TargetType" Height="25" IsEnabled="False" Text="{Binding TargetType}"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="15">
                <TextBlock Foreground="Black" Text="Целевое значение:" FontWeight="Bold"/>
                <TextBox x:Name="TargetValue" Height="25" IsEnabled="False" 
                         Text="{Binding TargetValue, StringFormat={}{0:F2}}"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>

                <TextBlock Foreground="Black" Text="Период:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="Period" Height="25" IsEnabled="False"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>

                <TextBlock Foreground="Black" Text="Статус:" FontWeight="Bold" Margin="0,10,0,0"/>
                <TextBox x:Name="IsCompleted" Height="25" IsEnabled="False" 
                         Text="{Binding IsCompleted, StringFormat={}{0}}"
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="15" VerticalAlignment="Center">
                <Button Content="Изменить" Width="80" Height="30" Margin="0,5" 
                        Background="#2ecc71" Foreground="White" BorderThickness="0"
                        FontWeight="Bold" Click="EditGoal"/>
                <Button Content="Удалить" Width="80" Height="30" Margin="0,5" 
                        Background="#e74c3c" Foreground="White" BorderThickness="0"
                        FontWeight="Bold" Click="DeleteGoal"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
