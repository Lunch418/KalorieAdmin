<Page x:Class="KalorieAdmin.Pages.Users.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="600"
      Title="Add User">

    <Grid Background="#eafaf1">
        <!-- Header -->
        <Border Background="#2ecc71" Height="60" VerticalAlignment="Top">
            <TextBlock x:Name="PageTitle" Text="Добавить пользователя" Foreground="White" FontSize="20" FontWeight="Bold"
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Background="#27ae60" Margin="50,70,50,10" CornerRadius="10">
            <StackPanel Margin="30">
                <TextBlock Text="Имя пользователя:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Username" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                         Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                <TextBlock Text="Email:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Email" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                         Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                <TextBlock Text="Пароль:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="Password" Height="35" Margin="0,0,0,15" 
                             Background="#ecf0f1" Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                <TextBlock Text="Цель по калориям:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="DailyCalorieGoal" Height="35" Margin="0,0,0,30" Background="#ecf0f1" 
                         Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnSave" Content="Сохранить" Background="#2ecc71" 
                            Foreground="White" Height="40" Width="120" BorderThickness="0" 
                            FontWeight="Bold" FontSize="14" Click="SaveUser" Margin="0,0,20,0"/>
                    <Button Content="Отмена" Background="#e74c3c" 
                            Foreground="White" Height="40" Width="120" BorderThickness="0" 
                            FontWeight="Bold" FontSize="14" Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
