<Page x:Class="KalorieAdmin.Pages.Goals_Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KalorieAdmin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="Add Goal">

    <Grid Background="#eafaf1">
        <!-- Header -->
        <Border Background="#2ecc71" Height="60" VerticalAlignment="Top">
            <TextBlock x:Name="PageTitle" Text="Добавить цель" Foreground="White" FontSize="20" FontWeight="Bold"
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Background="#27ae60" Margin="50,80,50,43" CornerRadius="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="30">
                    <TextBlock Text="ID пользователя:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="UserId" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                             Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                    <TextBlock Text="Тип цели:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="TargetType" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                              Foreground="Black" BorderThickness="0" Padding="5" FontSize="14">
                        <ComboBoxItem Content="Похудение"/>
                        <ComboBoxItem Content="Набор массы"/>
                        <ComboBoxItem Content="Поддержание веса"/>
                        <ComboBoxItem Content="Снижение калорий"/>
                        <ComboBoxItem Content="Увеличение активности"/>
                    </ComboBox>

                    <TextBlock Text="Целевое значение:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TargetValue" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                             Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                    <TextBlock Text="Дата начала:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="StartDate" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                               Foreground="Black" BorderThickness="0" Padding="5" FontSize="14"/>

                    <TextBlock Text="Дата окончания:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="EndDate" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                               Foreground="Black" BorderThickness="0" Padding="5" FontSize="14"/>

                    <CheckBox x:Name="IsCompleted" Content="Цель выполнена" Foreground="White" 
                             FontWeight="Bold" Margin="0,0,0,30" Background="Transparent"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnSave" Content="Сохранить" Background="#2ecc71" 
                                Foreground="White" Height="40" Width="120" BorderThickness="0" 
                                FontWeight="Bold" FontSize="14" Click="SaveGoal" Margin="0,0,20,0"/>
                        <Button Content="Отмена" Background="#e74c3c" 
                                Foreground="White" Height="40" Width="120" BorderThickness="0" 
                                FontWeight="Bold" FontSize="14" Click="Cancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
