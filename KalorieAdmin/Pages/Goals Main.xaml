<Page x:Class="KalorieAdmin.Pages.Goals.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Goals Main">

    <Grid Background="#e9f7ef">
        <!-- Заголовок -->
        <Border Background="#2ecc71" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Управление целями" Foreground="White" FontSize="20" FontWeight="Bold"
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Панель фильтрации -->
        <Border Background="#27ae60" Margin="10,70,10,0" Height="40" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBox x:Name="FilterUser" Width="150" Height="30" Margin="5" Padding="5" 
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0" 
                         Text="ID пользователя" VerticalContentAlignment="Center"/>
                <ComboBox x:Name="FilterType" Width="120" Height="30" Margin="5" Padding="5" 
                         Background="#d5f5e3" Foreground="Black" BorderThickness="0">
                    <ComboBoxItem Content="Все типы"/>
                    <ComboBoxItem Content="weight_loss"/>
                    <ComboBoxItem Content="weight_gain"/>
                    <ComboBoxItem Content="maintain"/>
                </ComboBox>
                <Button Content="Фильтровать" Click="ApplyFilter" Height="30" Width="110" Margin="5" 
                        Background="#2ecc71" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                <Button Content="Сбросить" Click="ResetFilter" Height="30" Width="100" Margin="5" 
                        Background="#e74c3c" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <!-- Список целей -->
        <ScrollViewer Margin="10,120,10,60" Background="#d5f5e3">
            <StackPanel x:Name="parent"/>
        </ScrollViewer>

        <!-- Кнопка добавления -->
        <Button Click="AddGoal" Content="Добавить цель" HorizontalAlignment="Right" Width="180" 
                VerticalAlignment="Bottom" Margin="0,0,20,10" Background="#2ecc71" Foreground="White"/>
    </Grid>
</Page>
