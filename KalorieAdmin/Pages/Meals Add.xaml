<Page x:Class="KalorieAdmin.Pages.Meals.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Add Meal">

    <Grid Background="#eafaf1">
        <!-- Header -->
        <Border Background="#2ecc71" Height="60" VerticalAlignment="Top">
            <TextBlock x:Name="PageTitle" Text="Добавить прием пищи" Foreground="White" FontSize="20" FontWeight="Bold"
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Background="#27ae60" Margin="50,80,50,43" CornerRadius="10">
            <StackPanel Margin="30">
                <TextBlock Text="ID пользователя:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="UserId" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                         Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                <TextBlock Text="ID продукта:" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="ProductId" Height="35" Margin="0,0,0,15" Background="#ecf0f1" 
                         Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                <TextBlock Text="Вес (г):" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="WeightGrams" Height="35" Margin="0,0,0,30" Background="#ecf0f1" 
                         Foreground="Black" BorderThickness="0" Padding="10" FontSize="14"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="btnSave" Content="Сохранить" Background="#2ecc71" 
                            Foreground="White" Height="40" Width="120" BorderThickness="0" 
                            FontWeight="Bold" FontSize="14" Click="SaveMeal" Margin="0,0,20,0"/>
                    <Button Content="Отмена" Background="#e74c3c" 
                            Foreground="White" Height="40" Width="120" BorderThickness="0" 
                            FontWeight="Bold" FontSize="14" Click="Cancel_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
